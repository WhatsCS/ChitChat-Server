{
  "name": "served",
  "version": "0.5.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "standard --fix",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "start-dev": "cross-env NODE_ENV=development node ./bin/www",
    "test-migrate": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "pretest": "yarn test-migrate && cross-env NODE_ENV=test npx sequelize-cli db:seed:all",
    "test": "cross-env NODE_ENV=test jest",
    "posttest": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^8.2.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "6.3.3",
    "socket.io": "^2.3.0",
    "socketio-jwt": "^4.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "14.0.22",
    "@types/socket.io": "^2.1.4",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "jest": "^26.1.0",
    "jsdoc": "^3.6.4",
    "sequelize-cli": "^6.2.0",
    "standard": "^14.3.3",
    "supertest": "^4.0.2"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}